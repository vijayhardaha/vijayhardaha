	//
	// VS CODE WORKSPACE PREFERENCES
	// ==============================================================================
	// Purpose: Configures the editor behavior to automate linting and
	// formatting, ensuring a seamless "save-to-fix" development loop.
	// ==============================================================================

	// ==========================================
	// ✨ FORMATTING & SAVING
	// ==========================================
	// Use Prettier as the master formatter for this project
	"editor.defaultFormatter": "esbenp.prettier-vscode",

	// We enable formatOnSave because this is not a js project, and we want Prettier to run on every save.
	"editor.formatOnSave": true,

	// ==========================================
	// ✍️ SPELL CHECKER (CSpell)
	// ==========================================
	// Whitelist for project-specific terms to avoid annoying red squiggles
	"cSpell.words": [
		"Hardaha",
		"lifecycles",
		"pipefail",
		"vercel",
		"Vijay",
		"vijayhardaha",
		"Vitest"
	]
}
