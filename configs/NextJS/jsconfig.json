	//
	//  JAVASCRIPT INTELLIGENCE CONFIG
	// ==============================================================================
	// Purpose: Improves editor features (auto-imports, path alias resolution)
	// for JavaScript files within the project.
	// ==============================================================================

	"compilerOptions": {
		// ==========================================
		// ðŸ§  EDITOR INTELLIGENCE
		// ==========================================
		// Tells the editor how to handle JSX syntax (React 17+ transform)
		"jsx": "react-jsx",

		// Enables auto-imports and navigation for .json files
		"resolveJsonModule": true,

		// ==========================================
		// ðŸ”— PATH ALIASES
		// ==========================================
		// Matches tsconfig.json to ensure VS Code/WebStorm
		// resolves '@/components/...' correctly.
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},

	// ==========================================
	// ðŸ“‚ SCOPE CONTROL
	// ==========================================
	"exclude": ["node_modules", ".next", "out"]
}
